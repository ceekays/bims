  <tr><th>Page name</th>
    <th>Page title</th>
    <th>Page heading</th>
    <th>Page content</th>
    <th>Sidebar title</th>
    <th>Sidebar content</th>
  </tr>

<% for page_content in @page_contents %>
  <tr>
   <td><%=h page_content.pg_name %></td>
    <td><%=h page_content.pg_title %></td>
    <td><%=h page_content.pg_heading %></td>
    <td><%=h page_content.pg_content %></td>
    <td><%=h page_content.sb_title %></td>
    <td><%=h page_content.sb_content %></td>
    <td><%= link_to 'Show', page_content %></td>
    <td><%= link_to 'Edit', edit_page_content_path(page_content) %></td>
    <td><%= link_to 'Destroy', page_content, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

